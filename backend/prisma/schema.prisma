generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Event {
  id        String   @id @default(uuid())
  name      String
  date      DateTime
  createdAt DateTime @default(now())
  imageUrl  String?
  seats     Seat[]
}

model Seat {
  id             String     @id @default(uuid())
  eventId        String
  row            String
  number         Int
  status         SeatStatus @default(AVAILABLE)
  lockedByUserId String?
  createdAt      DateTime   @default(now())
  bookings       Booking[]
  event          Event      @relation(fields: [eventId], references: [id])

  @@unique([eventId, row, number])
}

model Booking {
  id        String        @id @default(uuid())
  userId    String
  seatId    String
  status    BookingStatus @default(PENDING)
  createdAt DateTime      @default(now())
  seat      Seat          @relation(fields: [seatId], references: [id])
  user      User          @relation(fields: [userId], references: [id])
}

enum SeatStatus {
  AVAILABLE
  LOCKED
  BOOKED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  EXPIRED
}

// ============================================
// CONCURRENCY TEST MODELS
// ============================================

model TestRun {
  id           String         @id @default(uuid())
  totalUsers   Int
  totalSeats   Int
  status       TestRunStatus  @default(RUNNING)
  startedAt    DateTime       @default(now())
  expiresAt    DateTime
  virtualUsers VirtualUser[]
  testSeats    TestSeat[]
  testBookings TestBooking[]
}

enum TestRunStatus {
  RUNNING
  COMPLETED
  EXPIRED
}

model VirtualUser {
  id          String         @id @default(uuid())
  testRunId   String
  createdAt   DateTime       @default(now())
  testRun     TestRun        @relation(fields: [testRunId], references: [id], onDelete: Cascade)
  seatLocks   TestSeatLock[]
  bookings    TestBooking[]
}

model TestSeat {
  id         String         @id @default(uuid())
  testRunId  String
  row        String
  number     Int
  testRun    TestRun        @relation(fields: [testRunId], references: [id], onDelete: Cascade)
  lock       TestSeatLock?

  @@unique([testRunId, row, number])
}

// One lock per seat - seatId as PK enforces this
model TestSeatLock {
  seatId        String       @id
  virtualUserId String
  lockedAt      DateTime     @default(now())
  seat          TestSeat     @relation(fields: [seatId], references: [id], onDelete: Cascade)
  virtualUser   VirtualUser  @relation(fields: [virtualUserId], references: [id], onDelete: Cascade)
}

model TestBooking {
  id            String      @id @default(uuid())
  testRunId     String
  virtualUserId String
  seatRow       String
  seatNumber    Int
  bookedAt      DateTime    @default(now())
  testRun       TestRun     @relation(fields: [testRunId], references: [id], onDelete: Cascade)
  virtualUser   VirtualUser @relation(fields: [virtualUserId], references: [id], onDelete: Cascade)
}
